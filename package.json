{
  "name": "avenger",
  "version": "1.3.1",
  "description": "A CQRS-flavoured data fetching and caching layer in JavaScript. Batching, caching, data-dependecies and manual invalidations in a declarative fashion for node and the browser",
  "scripts": {
    "lint": "eslint src test",
    "test": "jest",
    "build": "rm -rf lib && mkdir lib && babel --out-dir lib src && (cd src; tar cf - ./**/*.d.ts) | (cd lib; tar xf -)",
    "preversion": "npm run lint && npm test",
    "prepublish": "npm run build"
  },
  "main": "lib",
  "author": "",
  "license": "MIT",
  "jest": {
    "setupTestFrameworkScriptFile": "./test/jestSetup.js"
  },
  "dependencies": {
    "debug": "^2.2.0",
    "io-ts": "^0.9.8",
    "lodash": "^4.13.1",
    "rxjs": "^5.4.2"
  },
  "devDependencies": {
    "babel-cli": "6.8.0",
    "babel-eslint": "6.0.4",
    "babel-jest": "^22.0.4",
    "babel-loader": "6.2.4",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "^6.5.0",
    "eslint": "2.9.0",
    "eslint-config-buildo": "github:buildo/eslint-config",
    "jest": "^22.0.4",
    "sinon": "1.17.4"
  },
  "files": [
    "lib",
    "typings"
  ]
}

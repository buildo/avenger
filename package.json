{
  "name": "avenger2",
  "version": "2.0.0",
  "description": "A CQRS-flavoured data fetching and caching layer in JavaScript. Batching, caching, data-dependecies and manual invalidations in a declarative fashion for node and the browser",
  "scripts": {
    "lint": "tslint src/**/*.ts test/**/*.ts",
    "test": "npm run prettier && npm run lint && npm run mocha",
    "build": "rm -rf lib/* && tsc",
    "preversion": "npm test",
    "prepublish": "npm run build",
    "prettier": "prettier --no-semi --single-quote --print-width 120 --parser typescript --list-different \"{src,test}/**/*.ts\"",
    "mocha": "mocha -r ts-node/register test/**/*.test.ts"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "author": "",
  "license": "MIT",
  "dependencies": {
    "debug": "2.6.8",
    "fp-ts": "0.4.6",
    "io-ts": "0.6.1",
    "lodash": "4.17.4",
    "react": "15.6.1",
    "rxjs": "5.4.2"
  },
  "devDependencies": {
    "@types/debug": "0.0.29",
    "@types/lodash": "4.14.66",
    "@types/mocha": "2.2.41",
    "@types/node": "7.0.8",
    "@types/react": "15.0.29",
    "@types/sinon": "1.16.35",
    "mocha": "3.4.2",
    "prettier": "1.5.3",
    "sinon": "1.17.4",
    "ts-node": "3.3.0",
    "tslint": "4.4.2",
    "tslint-config-standard": "4.0.0",
    "typescript": "2.4.2"
  }
}

{
  "name": "avenger",
  "version": "0.4.0-alpha.1",
  "description": "A CQRS-flavoured data fetching and caching layer in JavaScript. Batching, caching, data-dependecies and manual invalidations in a declarative fashion for node and the browser",
  "scripts": {
    "lint": "eslint src",
    "start": "webpack --config=./dev/webpack.config.js --watch --progress",
    "server": "http-server ./dev",
    "test": "mocha --require babel-core/register",
    "build": "rm -rf lib && mkdir lib && babel --out-dir lib src",
    "preversion": "npm run lint && npm test",
    "prepublish": "npm run build"
  },
  "main": "lib",
  "author": "",
  "license": "MIT",
  "dependencies": {
    "debug": "^2.2.0",
    "lodash": "^4.13.1",
    "rxjs": "5.0.0-beta.8",
    "tcomb": "^3.2.2"
  },
  "devDependencies": {
    "babel-cli": "6.8.0",
    "babel-eslint": "6.0.4",
    "babel-loader": "6.2.4",
    "babel-plugin-syntax-flow": "6.8.0",
    "babel-plugin-tcomb": "^0.3.1",
    "babel-plugin-transform-class-properties": "6.9.1",
    "babel-plugin-transform-flow-strip-types": "6.8.0",
    "babel-preset-es2015": "6.6.0",
    "eslint": "2.9.0",
    "eslint-config-buildo": "github:buildo/eslint-config",
    "express": "4.13.4",
    "http-server": "0.9.0",
    "mocha": "2.5.3",
    "sinon": "1.17.4",
    "webpack": "1.13.0"
  }
}

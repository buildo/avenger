{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "jsx": "react",
    "removeComments": true,
    "lib": ["esnext", "dom"],
    "outDir": "lib",
    "declaration": true
  },
  "include": ["src"]
}

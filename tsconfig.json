{
  "compilerOptions": {
    "types": ["jest", "node"],
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "allowJs": true,
    "lib": [
      "es6", "es7", "es2017"
    ]
  },
  "include": [
    "src",
    "test",
    "typings"
  ]
}

{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "rules": {
    "eol-last": 0,
    "new-cap": 0,
    "no-use-before-define": 0,
    "no-shadow": 0,
    "no-process-exit": 0,
    "strict": [2, "global"],
    "no-underscore-dangle": 0,
    "quotes": [2, "single"],
    "comma-dangle": 2,
  }
}
